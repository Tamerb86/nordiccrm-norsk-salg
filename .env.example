# Application
NODE_ENV=production
PORT=5000
VITE_APP_URL=https://your-app.railway.app

# Database (if using external DB in future)
# DATABASE_URL=postgresql://user:password@host:port/database

# API Configuration
VITE_API_BASE_URL=https://your-app.railway.app/api/v1

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# SMS Gateway (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://sms-gateway.example.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY_SALT=your-api-key-salt-change-this

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-change-this

# GDPR Compliance
DATA_RETENTION_DAYS=730
ENABLE_DATA_EXPORT=true

# OAuth (Future use)
# OAUTH_CLIENT_ID=
# OAUTH_CLIENT_SECRET=
# OAUTH_CALLBACK_URL=

# Feature Flags
ENABLE_EMAIL_SCHEDULING=true
ENABLE_SMS=false
ENABLE_WEBHOOKS=true
ENABLE_API_PLAYGROUND=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false
